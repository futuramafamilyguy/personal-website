{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDbConfiguration": {
    "DatabaseName": "PersonalWebsite",
    "PicturesCollectionName": "pictures",
    "CinemasCollectionName": "cinemas",
    "PostsCollectionName":  "posts",
    "VisitStatisticsCollectionName": "visit_stats"
  },
  "ImageStorageConfiguration": {
    "PictureImageDirectory": "pictures/{year}",
    "PostImageDirectory":  "posts",
    "AllowedImageExtensions": [
      ".jpg",
      ".jpeg",
      ".png",
      ".webp"
    ]
  }
}
