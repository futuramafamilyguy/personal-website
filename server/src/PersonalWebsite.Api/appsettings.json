{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "RateLimiting": {
    "PermitLimit": 10,
    "WindowMinutes": 10,
    "QueueLimit": 0
  },
  "AllowedHosts": "*",
  "MongoDbConfiguration": {
    "DatabaseName": "PersonalWebsite",
    "MoviesCollectionName": "movies",
    "CinemasCollectionName": "cinemas",
    "PostsCollectionName": "posts",
    "VisitStatisticsCollectionName": "visit_stats"
  },
  "ImageStorageConfiguration": {
    "BasePathMovie": "images/movies",
    "BasePathPost": "images/posts",
    "AllowedImageExtensions": [
      ".jpg",
      ".jpeg",
      ".png",
      ".webp"
    ],
    "CdnEnabled": "false"
  },
  "MarkdownStorageConfiguration": {
    "BasePath": "markdown/posts",
    "CdnEnabled": "false"
  }
}
